---
import NewsLetter from "../components/NewsLetter.astro"
import SoMeButtons from "../components/SoMeButtons.astro"
---
<footer>
    <div> <NewsLetter /></div>
    <div class="buttons"><SoMeButtons /></div>
</footer>

<style>

    footer{
            display: flex;
            flex-direction: column;
        }
    /* st√∏rre end 100px */
    @media (min-width: 1000px) {
        footer{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin: 20px 20px 30px 20px;
        }
        .buttons{
            order:-1;
        }
    }
</style>